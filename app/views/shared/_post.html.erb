<div class="post-wrapper">
  <div class="post-description">
    <div class="post-text">
      <h2><%= link_to post.title, user_post_path(post.author_id, post.id) %></h2>
      <p><%= post.text %></p>
    </div>
    <div class="counters">
      <p>Comments: <%= post.comments_counter %></p>
      <p>Likes <%= post.likes_counter %></p>
    </div>
  </div>
</div>
