<div class="new-post">
  <%= form_with model: post, url: create_post_path, method: post, scope: post do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
    <%= form.submit "Post!" %>
  <% end %>
</div>
