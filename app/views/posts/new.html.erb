  <% if flash[:error] %>
    <p class="error"><%= flash[:error] %></p>
  <% end %>
<div class="new-post">
  <h2>Create a new Post</h2>
  <%= form_with model: post, url: create_post_path, method: post, scope: post do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
    <%= form.submit "Post!" %>
  <% end %>
</div>
